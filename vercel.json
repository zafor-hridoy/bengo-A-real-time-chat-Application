{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/src/server.js"
        },
        {
            "src": "/(.*)",
            "action": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/dist/$1",
            "check": true
        },
        {
            "src": "/(.*)",
            "dest": "frontend/dist/index.html"
        }
    ]
}